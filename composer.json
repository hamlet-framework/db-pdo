{
  "name": "hamlet-framework/db-pdo",
  "type": "framework",
  "description": "Hamlet Framework / DB / PDO",
  "keywords": ["framework", "orm", "database", "pdo"],
  "license": "Apache-2.0",
  "authors": [
    {
      "name": "Vasily Kartashov",
      "email": "info@kartashov.com"
    }
  ],
  "config": {
    "optimize-autoloader": true,
    "classmap-authoritative": true,
    "sort-packages": true
  },
  "minimum-stability": "dev",
  "require": {
    "php": "^7 || ^8",
    "ext-pdo": "@stable",
    "psr/log": "@stable",
    "hamlet-framework/db": "dev-master"
  },
  "require-dev": {
    "php-parallel-lint/php-parallel-lint": "@stable",
    "monolog/monolog": "@stable",
    "phake/phake": "@stable",
    "phpunit/phpunit": "^6 || ^7 || ^8",
    "squizlabs/php_codesniffer": "@stable",
    "vimeo/psalm": "@stable",
    "symfony/polyfill-mbstring": "<=1.20.0"
  },
  "autoload": {
    "psr-4": {
      "Hamlet\\Database\\PDO\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Hamlet\\Database\\PDO\\": "tests"
    }
  }
}
